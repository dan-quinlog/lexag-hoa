    "@aws-amplify/auth": "^5.6.5",
    "@hookform/resolvers": "^3.3.2",
    "graphql": "^16.8.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-hook-form": "^7.47.0",
    "react-router-dom": "^6.17.0",
    "zod": "^3.22.4"
